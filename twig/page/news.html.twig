{% extends "base.html.twig" %}

{% block content %}
    <div id="new-news">
        {% if news is not empty and news|length > 1 %}
            <img src="assets/medias/page/news/prev.png" alt="" class="slider-prev">
        {% endif %}
        {% if admin %}
            <img src="assets/medias/page/news/new.png" alt="edit icon" title="Créer une news" class="icon-news popup-trigger">
        {% endif %}
        {% if news is not empty and news|length > 1 %}
            <img src="assets/medias/page/news/prev.png" alt="" class="slider-next">
        {% endif %}
    </div>

    {% if news is not empty %}
        <div id="slider-news" class="swipe">
            <div class="swipe-wrap">
                {% for new in news %}
                    <div>
                        {% if new.image_placement == 1 %}
                            <img src="assets/medias/news/{{ new.image }}" alt="news à propos de {{ new.title }}" class="image-placement-{{ new.image_placement }}">
                            <p>{{ new.title }}</p>
                            <p>{{ new.description }}</p>
                        {% elseif new.image_placement == 2 or new.image_placement == 4 %}
                            <p>{{ new.title }}</p>
                            <img src="assets/medias/news/{{ new.image }}" alt="news à propos de {{ new.title }}" class="image-placement-{{ new.image_placement }}">
                            <p>{{ new.description }}</p>
                        {% elseif new.image_placement == 3 %}
                            <p>{{ new.title }}</p>
                            <p>{{ new.description }}</p>
                            <img src="assets/medias/news/{{ new.image }}" alt="news à propos de {{ new.title }}" class="image-placement-{{ new.image_placement }}">
                        {% endif %}
                        {% if admin %}
                            <div class="slider-actions">
                                <img src="assets/medias/page/news/modify.png" alt="edit icon" title="Editer une news" class="icon-news popup-trigger" data-id="{{ new.id_news }}" data-action="edit">
                                <img src="assets/medias/page/news/archive.svg" alt="archive icon" title="Archiver une news" class="icon-news popup-trigger" data-id="{{ new.id_news }}" data-action="archive">
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}




    {% if archived_news is not empty %}
        {% if archived_news|length > 1 %}
            <div id="archived-news">
                <img src="assets/medias/page/news/prev.png" alt="" class="slider-prev">
                <img src="assets/medias/page/news/prev.png" alt="" class="slider-next">
            </div>
        {% endif %}

        <div id="slider-archived-news" class="swipe">
            <div class="swipe-wrap">
                {% for new in archived_news %}
                    <div>
                        {% if new.image_placement == 1 %}
                            <img src="assets/medias/news/{{ new.image }}" alt="news à propos de {{ new.title }}" class="image-placement-{{ new.image_placement }}">
                            <p>{{ new.title }}</p>
                            <p>{{ new.description }}</p>
                        {% elseif new.image_placement == 2 or new.image_placement == 4 %}
                            <p>{{ new.title }}</p>
                            <img src="assets/medias/news/{{ new.image }}" alt="news à propos de {{ new.title }}" class="image-placement-{{ new.image_placement }}">
                            <p>{{ new.description }}</p>
                        {% elseif new.image_placement == 3 %}
                            <p>{{ new.title }}</p>
                            <p>{{ new.description }}</p>
                            <img src="assets/medias/news/{{ new.image }}" alt="news à propos de {{ new.title }}" class="image-placement-{{ new.image_placement }}">
                        {% endif %}
                        <div class="slider-actions">
                            <img src="assets/medias/page/news/reactivate.png" alt="edit icon" title="Réactiver une news" class="icon-news popup-trigger" data-id="{{ new.id_news }}" data-action="reactivate">
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>


    {% endif %}



    <div class="body-blackout"></div>

    <div id="modal-news" class="modal popup-modal shadow">
        <img src="assets/medias/page/news/close.png" alt="close icon" class="popup-modal__close">
        <div class="data-modal"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="assets/js/others/swipe.js"></script>
    <script src="assets/js/others/slider.js"></script>
    {{ parent() }}
{% endblock %}
