<link rel="stylesheet" href="assets/css/block/admin.css">

<div id="administration-module">
    {% if action == "connexion" %}
        <h2>Connexion administrateur</h2>
    {% elseif action == "deconnexion" %}
        <h2>Déconnexion</h2>
    {% endif %}
    <form id="form-administration-module">
        {% if action == "connexion" %}
            <p>Identifiant</p>
            <input type="text" name="login">
            <p>Mot de passe</p>
            <input type="password" name="password">
            <input type="hidden" name="action" value="connexion">
        {% elseif action == "deconnexion" %}
            <p>Voulez-vous vraiment vous déconnecter ?</p>
            <input type="hidden" name="action" value="deconnexion">
        {% endif %}

        <p id="log-administration-module"></p>
        <div>
            <button type="button" id="button-admin"></button>
        </div>
    </form>
</div>
